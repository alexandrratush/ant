<project name="mxmlc" default="build" basedir=".">

	<property file="build.properties"/>
	<taskdef resource="flexTasks.tasks" classpath="${FLEX_HOME}/ant/lib/flexTasks.jar"/>

	<property name="project.src.path" location="${basedir}/src"/>
	<property name="project.lib.path" location="${basedir}/lib"/>
	<property name="project.document.class" value="com/core/Main.as"/>
	<property name="project.output.file" location="Main.swf"/>
	
	<target name="build">
		<java jar="${sdk.mxmlc.compiler}" fork="true" failonerror="true">
			<arg value="-debug=false" />
			<arg value="-optimize=true" />
			<arg value="-verbose-stacktraces=true" />
			<arg value="+flexlib=${sdk.libs.framework}" />
			<arg value="-source-path=${project.src.path}" />
			<arg value="-library-path=${sdk.libs.location}" />
			<arg value="-l+=${project.lib.path}" />
			<arg value="-file-specs=${project.src.path}/${project.document.class}" />
			<arg value="-output=${project.output.file}" />
		</java>
	</target>
</project>