<project name="hello ant world!" default="build" basedir=".">

	<property file="build.properties"/>
	<taskdef resource="flexTasks.tasks" classpath="${FLEX_HOME}/ant/lib/flexTasks.jar"/>

	<property name="src.path" location="."/>
	<property name="main.file" value="Main.as"/>
	<property name="output.file" location="Main.swf"/>

	<target name="build">
		<mxmlc file="${src.path}/${main.file}" output="${output.file}" keep-generated-actionscript="false">
			<static-link-runtime-shared-libraries>true</static-link-runtime-shared-libraries>
		</mxmlc>
	</target>
</project>